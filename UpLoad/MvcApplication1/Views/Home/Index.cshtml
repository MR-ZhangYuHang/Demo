    <embed id="LODOP_EM" type="application/x-print-lodop" width="0" height="0" pluginspage="../Lodop/install_lodop.exe"></embed>
</object>  
<div class="toolbar">
    <input type="button" onclick="print_preview()"value="预览" />
</div>
<script>

    var LODOP; //声明为全局变量
    // 打印预览
    function print_preview() {
        CreatePrintPage();
        LODOP.PREVIEW();
    };
    // 直接打印
    function print() {
        CreatePrintPage();
        LODOP.PRINT();
    };
    // 选择打印机
    function print_printA() {
        CreatePrintPage();
        LODOP.PRINTA();
    };
    //打印维护
    function printSetup() {
        CreatePrintPage();
        LODOP.PRINT_SETUP();
    };
    //打印设计
    function printDesign() {
        CreatePrintPage();
        LODOP.PRINT_DESIGN();
    };
    // 创建打印页面
    function CreatePrintPage() {
        LODOP = getLodop();
        LODOP.PRINT_INIT("web在线打印");
        LODOP.SET_PRINT_PAGESIZE(1, 0, 0, "A4");
        //设置打印页面属性：2：表示横向打印，0：定义纸张宽度，为0表示无效设置，A4：设置纸张为A4
        //LODOP.ADD_PRINT_TEXT(50, 231, 260, 39, "打印页面部分内容");
        LODOP.SET_PRINT_STYLE("FontSize", 18);
        LODOP.SET_PRINT_STYLE("Bold", 1);
        LODOP.ADD_PRINT_HTM(10, 30, 760, 860, $('#CurrentDocumentPage')[0].contentWindow.document.body.innerHTML);
    }
</script>
